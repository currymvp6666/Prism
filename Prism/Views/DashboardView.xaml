<UserControl x:Class="Prism.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Prism.Converters"
             xmlns:vm="clr-namespace:Prism.ViewModel">

    <UserControl.DataContext>
        <vm:DashboardViewModel/>
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- 统计卡片区域 -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 汇总卡片 -->
                <Border Grid.Column="0" Background="{StaticResource PrimaryColor}" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="汇总" Foreground="White" FontSize="14" Opacity="0.9"/>
                        <TextBlock Text="{Binding TotalCount}" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- 已完成卡片 -->
                <Border Grid.Column="2" Background="{StaticResource SuccessColor}" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="已完成" Foreground="White" FontSize="14" Opacity="0.9"/>
                        <TextBlock Text="{Binding CompletedCount}" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- 完成比例卡片 -->
                <Border Grid.Column="4" Background="{StaticResource InfoColor}" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="完成比例" Foreground="White" FontSize="14" Opacity="0.9"/>
                        <TextBlock Text="{Binding CompletionRate, StringFormat={}{0}%}" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- 备忘录卡片 -->
                <Border Grid.Column="6" Background="{StaticResource WarningColor}" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="备忘录" Foreground="White" FontSize="14" Opacity="0.9"/>
                        <TextBlock Text="{Binding MemoCount}" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 待办事项 & 备忘录列 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 待办事项列 -->
                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <Border Padding="0,0,0,20" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="待办事项" Foreground="{StaticResource DarkTextColor}" FontSize="18" FontWeight="Bold"/>
                                <Button Grid.Column="1" Content="+" Width="32" Height="32" Background="{StaticResource SuccessColor}" Foreground="White" FontSize="20" FontWeight="Bold" BorderThickness="0"
                                        Command="{Binding ShowAddTodoDialogCommand}"/>
                            </Grid>
                        </Border>

                        <ScrollViewer Margin="0,20,0,0" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                            <ItemsControl ItemsSource="{Binding TodoItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TaskItemStyle}" Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <CheckBox Grid.Column="0"
                                                    IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                                    Margin="0,0,15,0"
                                                    VerticalAlignment="Top"
                                                    Command="{Binding DataContext.HideTodoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
CommandParameter="{Binding}"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Title}" Foreground="{StaticResource DarkTextColor}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Description}" Foreground="{StaticResource LightTextColor}" FontSize="12" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding DueDate, StringFormat='截止日期: {0:yyyy-MM-dd}'}" Foreground="{StaticResource LightTextColor}" FontSize="11" Margin="0,8,0,0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                    <Button Content="✎" Style="{StaticResource CardButtonStyle}" Width="28" Height="28" Margin="0,0,5,0"
                                                           Command="{Binding DataContext.EditTodoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                    <Button Content="×" Style="{StaticResource CardButtonStyle}" Width="28" Height="28"
                                                            Command="{Binding DataContext.HideTodoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- 备忘录列 -->
                <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <Border Padding="0,0,0,20" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="备忘录" Foreground="{StaticResource DarkTextColor}" FontSize="18" FontWeight="Bold"/>
                                <Button Grid.Column="1" Content="+" Width="32" Height="32" Background="{StaticResource SuccessColor}" Foreground="White" FontSize="20" FontWeight="Bold" BorderThickness="0"
                                        Command="{Binding ShowAddMemoDialogCommand}"/>
                            </Grid>
                        </Border>

                        <ScrollViewer Margin="0,20,0,0" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                            <ItemsControl ItemsSource="{Binding Memos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource MemoItemStyle}" Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Title}" Foreground="{StaticResource DarkTextColor}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Content}" Foreground="{StaticResource LightTextColor}" FontSize="12" Margin="0,8,0,0" TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding CreatedTime, StringFormat='创建于: {0:yyyy-MM-dd HH:mm}'}" Foreground="#999999" FontSize="11" Margin="0,10,0,0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="✎" Style="{StaticResource CardButtonStyle}" Width="28" Height="28" Margin="0,0,5,0"
                                                            Command="{Binding DataContext.EditMemoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                    <Button Content="×" Style="{StaticResource CardButtonStyle}" Width="28" Height="28"
                                                            Command="{Binding DataContext.HideMemoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 最近活动 -->
            <Border Margin="0,30,0,0" Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="最近活动" Foreground="{StaticResource DarkTextColor}" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <ItemsControl ItemsSource="{Binding RecentActivities}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TaskItemStyle}" Background="#F8F9FA">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Text}" Foreground="{Binding Color}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Time, StringFormat='yyyy-MM-dd HH:mm'}" Foreground="#999999" FontSize="11" Margin="0,3,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
