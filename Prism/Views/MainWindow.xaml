<Window x:Class="Prism.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Prism.ViewModel"
        Title="笔记本" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- 颜色资源 -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="InfoColor" Color="#00BCD4"/>
        <SolidColorBrush x:Key="WarningColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="DarkTextColor" Color="#333333"/>
        <SolidColorBrush x:Key="LightTextColor" Color="#666666"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E4E7ED"/>
        <SolidColorBrush x:Key="HoverColor" Color="#F0F2F5"/>

        <!-- 样式 -->
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="1" 
                                BorderBrush="{StaticResource BorderColor}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TaskItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="MemoItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MemoViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="White" 
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Logo区域 -->
                <Border Height="60" Background="{StaticResource PrimaryColor}" 
                        CornerRadius="0,0,8,0">
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <TextBlock Text="📒" FontSize="24" Margin="0,0,8,0"/>
                        <TextBlock Text="笔记本" Foreground="White" 
                                  FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 用户信息 -->
                <Border Padding="20,20,20,10">
                    <StackPanel>
                        <TextBlock Text="你好，痕迹!" 
                                  Foreground="{StaticResource DarkTextColor}" 
                                  FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CurrentDate, StringFormat='yyyy年MM月dd日 dddd'}" 
                                  Foreground="{StaticResource LightTextColor}" 
                                  FontSize="12" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- 导航菜单 -->
                <StackPanel Margin="0,20,0,0">
                    <Button Style="{StaticResource CardButtonStyle}" 
                            Content="📊 仪表盘" 
                            Height="40" Margin="10,0,10,5"
                            Command="{Binding NavigateCommand}" 
                            CommandParameter="Dashboard"/>
                    <Button Style="{StaticResource CardButtonStyle}" 
                            Content="✅ 待办事项" 
                            Height="40" Margin="10,0,10,5"
                            Command="{Binding NavigateCommand}" 
                            CommandParameter="Todo"/>
                    <Button Style="{StaticResource CardButtonStyle}" 
                            Content="📝 备忘录" 
                            Height="40" Margin="10,0,10,5"
                            Command="{Binding NavigateCommand}" 
                            CommandParameter="Memo"/>
                    <Button Style="{StaticResource CardButtonStyle}" 
                            Content="📅 日历" 
                            Height="40" Margin="10,0,10,5"
                            Command="{Binding NavigateCommand}" 
                            CommandParameter="Calendar"/>
                    <Button Style="{StaticResource CardButtonStyle}" 
                            Content="⚙️ 设置" 
                            Height="40" Margin="10,0,10,5"
                            Command="{Binding NavigateCommand}" 
                            CommandParameter="Settings"/>
                </StackPanel>

                <!-- 快速操作 -->
                <Border Margin="10,30,10,0" Padding="15" 
                       Background="#F8F9FA" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="快速操作" 
                                  Foreground="{StaticResource DarkTextColor}" 
                                  FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Button Content="新建待办" 
                               Background="{StaticResource PrimaryColor}" 
                               Foreground="White" Height="35" 
                               BorderThickness="0" FontSize="13"
                               Margin="0,0,0,8"
                               Command="{Binding ShowAddTodoDialogCommand}"/>
                        <Button Content="新建备忘" 
                               Background="{StaticResource SuccessColor}" 
                               Foreground="White" Height="35" 
                               BorderThickness="0" FontSize="13"
                               Command="{Binding ShowAddMemoDialogCommand}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- 右侧主内容区 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 顶部工具栏 -->
            <Border Grid.Row="0" Height="60" Background="White" 
                   Padding="20,0" BorderBrush="{StaticResource BorderColor}" 
                   BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                              Text="{Binding CurrentViewTitle}" 
                              VerticalAlignment="Center"
                              Foreground="{StaticResource DarkTextColor}" 
                              FontSize="20" FontWeight="Bold"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
                               VerticalAlignment="Center">
                        <Button Content="🔍" 
                               Style="{StaticResource CardButtonStyle}" 
                               Width="40" Height="40" Margin="0,0,10,0"/>
                        <Button Content="🔔" 
                               Style="{StaticResource CardButtonStyle}" 
                               Width="40" Height="40" Margin="0,0,10,0"/>
                        <Button Content="👤" 
                               Style="{StaticResource CardButtonStyle}" 
                               Width="40" Height="40"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 主内容 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                         Padding="20">
                <StackPanel>
                    <!-- 统计卡片区域 -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 汇总卡片 -->
                        <Border Grid.Column="0" 
                               Background="{StaticResource PrimaryColor}" 
                               CornerRadius="10" Padding="20">
                            <StackPanel>
                                <TextBlock Text="汇总" 
                                          Foreground="White" FontSize="14" 
                                          Opacity="0.9"/>
                                <TextBlock Text="{Binding TotalCount}" 
                                          Foreground="White" FontSize="36" 
                                          FontWeight="Bold" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 已完成卡片 -->
                        <Border Grid.Column="2" 
                               Background="{StaticResource SuccessColor}" 
                               CornerRadius="10" Padding="20">
                            <StackPanel>
                                <TextBlock Text="已完成" 
                                          Foreground="White" FontSize="14" 
                                          Opacity="0.9"/>
                                <TextBlock Text="{Binding CompletedCount}" 
                                          Foreground="White" FontSize="36" 
                                          FontWeight="Bold" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 完成比例卡片 -->
                        <Border Grid.Column="4" 
                               Background="{StaticResource InfoColor}" 
                               CornerRadius="10" Padding="20">
                            <StackPanel>
                                <TextBlock Text="完成比例" 
                                          Foreground="White" FontSize="14" 
                                          Opacity="0.9"/>
                                <TextBlock Text="{Binding CompletionRate, StringFormat={}{0}%}" 
                                          Foreground="White" FontSize="36" 
                                          FontWeight="Bold" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- 备忘录卡片 -->
                        <Border Grid.Column="6" 
                               Background="{StaticResource WarningColor}" 
                               CornerRadius="10" Padding="20">
                            <StackPanel>
                                <TextBlock Text="备忘录" 
                                          Foreground="White" FontSize="14" 
                                          Opacity="0.9"/>
                                <TextBlock Text="{Binding MemoCount}" 
                                          Foreground="White" FontSize="36" 
                                          FontWeight="Bold" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- 内容区域 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 待办事项列 -->
                        <Border Grid.Column="0" Background="White" 
                               CornerRadius="10" Padding="20">
                            <StackPanel>
                                <!-- 标题栏 -->
                                <Border Padding="0,0,0,20" 
                                       BorderBrush="{StaticResource BorderColor}" 
                                       BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                  Text="待办事项" 
                                                  Foreground="{StaticResource DarkTextColor}" 
                                                  FontSize="18" FontWeight="Bold"/>

                                        <Button Grid.Column="1" 
                                               Content="+" 
                                               Width="32" Height="32" 
                                               Background="{StaticResource SuccessColor}" 
                                               Foreground="White" FontSize="20" 
                                               FontWeight="Bold" BorderThickness="0" 
                                               
                                               Command="{Binding ShowAddTodoDialogCommand}"/>
                                    </Grid>
                                </Border>

                                <!-- 待办事项列表 -->
                                <ScrollViewer Margin="0,20,0,0" 
                                            VerticalScrollBarVisibility="Auto" 
                                            MaxHeight="400">
                                    <ItemsControl ItemsSource="{Binding TodoItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource TaskItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- 完成复选框 -->
                                                        <CheckBox Grid.Column="0" 
                                                                 IsChecked="{Binding IsCompleted}"
                                                                 Margin="0,0,15,0" 
                                                                 VerticalAlignment="Top"/>

                                                        <!-- 任务内容 -->
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Title}" 
                                                                      Foreground="{StaticResource DarkTextColor}" 
                                                                      FontWeight="SemiBold" 
                                                                      TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding Description}" 
                                                                      Foreground="{StaticResource LightTextColor}" 
                                                                      FontSize="12" 
                                                                      Margin="0,5,0,0" 
                                                                      TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding DueDate, StringFormat='截止日期: {0:yyyy-MM-dd}'}" 
                                                                      Foreground="{StaticResource LightTextColor}" 
                                                                      FontSize="11" 
                                                                      Margin="0,8,0,0"/>
                                                        </StackPanel>

                                                        <!-- 操作按钮 -->
                                                        <StackPanel Grid.Column="2" 
                                                                   Orientation="Horizontal">
                                                            <Button Content="✎" 
        Style="{StaticResource CardButtonStyle}" 
        Width="28" Height="28" 
        Margin="0,0,5,0"
        Command="{Binding DataContext.EditTodoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
        CommandParameter="{Binding}"/>
                                                            <Button Content="×" 
                                                                   Style="{StaticResource CardButtonStyle}" 
                                                                   Width="28" Height="28"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <!-- 备忘录列 -->
                        <Border Grid.Column="2" Background="White" 
                               CornerRadius="10" Padding="20">
                            <StackPanel>
                                <!-- 标题栏 -->
                                <Border Padding="0,0,0,20" 
                                       BorderBrush="{StaticResource BorderColor}" 
                                       BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                  Text="备忘录" 
                                                  Foreground="{StaticResource DarkTextColor}" 
                                                  FontSize="18" FontWeight="Bold"/>

                                        <Button Grid.Column="1" 
                                               Content="+" 
                                               Width="32" Height="32" 
                                               Background="{StaticResource SuccessColor}" 
                                               Foreground="White" FontSize="20" 
                                               FontWeight="Bold" BorderThickness="0" 
                                               
                                               Command="{Binding ShowAddMemoDialogCommand}"/>
                                    </Grid>
                                </Border>

                                <!-- 备忘录列表 -->
                                <ScrollViewer Margin="0,20,0,0" 
                                            VerticalScrollBarVisibility="Auto" 
                                            MaxHeight="400">
                                    <ItemsControl ItemsSource="{Binding Memos}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource MemoItemStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- 备忘录内容 -->
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="{Binding Title}" 
                                                                      Foreground="{StaticResource DarkTextColor}" 
                                                                      FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding Content}" 
                                                                      Foreground="{StaticResource LightTextColor}" 
                                                                      FontSize="12" 
                                                                      Margin="0,8,0,0" 
                                                                      TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding CreatedTime, StringFormat='创建于: {0:yyyy-MM-dd HH:mm}'}" 
                                                                      Foreground="#999999" 
                                                                      FontSize="11" 
                                                                      Margin="0,10,0,0"/>
                                                        </StackPanel>

                                                        <!-- 操作按钮 -->
                                                        <StackPanel Grid.Column="1" 
                                                                   Orientation="Horizontal">
                                                            <Button Content="✎" 
        Style="{StaticResource CardButtonStyle}" 
        Width="28" Height="28" 
        Margin="0,0,5,0"
        Command="{Binding DataContext.EditMemoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
        CommandParameter="{Binding}"/>
                                                            <Button Content="×" 
                                                                   Style="{StaticResource CardButtonStyle}" 
                                                                   Width="28" Height="28"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- 最近活动 -->
                    <Border Margin="0,30,0,0" Background="White" 
       CornerRadius="10" Padding="20">
                        <StackPanel>
                            <TextBlock Text="最近活动" 
                  Foreground="{StaticResource DarkTextColor}" 
                  FontSize="18" FontWeight="Bold" 
                  Margin="0,0,0,15"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                                <ItemsControl ItemsSource="{Binding RecentActivities}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource TaskItemStyle}" Background="#F8F9FA">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Text}" 
                                           Foreground="{Binding Color}" 
                                           FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Time, StringFormat='yyyy-MM-dd HH:mm'}" 
                                           Foreground="#999999" 
                                           FontSize="11" 
                                           Margin="0,3,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>