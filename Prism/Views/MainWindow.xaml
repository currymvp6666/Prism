<Window x:Class="Prism.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Prism.ViewModel"
        xmlns:views="clr-namespace:Prism.Views"
        Title="笔记本" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E4E7ED" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Logo区域 -->
                <Border Height="60" Background="#2196F3" CornerRadius="0,0,8,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📒" FontSize="24" Margin="0,0,8,0"/>
                        <TextBlock Text="笔记本" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 导航按钮 -->
                <StackPanel Margin="0,20,0,0">
                    <Button Content="📊 仪表盘" Height="40" Margin="10,0,10,5"
                            Command="{Binding NavigateCommand}" CommandParameter="Dashboard"/>
                    <Button Content="✅ 待办事项" Height="40" Margin="10,0,10,5"
                            Command="{Binding NavigateCommand}" CommandParameter="Todo"/>
                    <Button Content="📝 备忘录" Height="40" Margin="10,0,10,5"
                            Command="{Binding NavigateCommand}" CommandParameter="Memo"/>
                    <Button Content="📅 日历" Height="40" Margin="10,0,10,5"
                            Command="{Binding NavigateCommand}" CommandParameter="Calendar"/>
                    <Button Content="⚙️ 设置" Height="40" Margin="10,0,10,5"
                            Command="{Binding NavigateCommand}" CommandParameter="Settings"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 右侧内容区 -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>
