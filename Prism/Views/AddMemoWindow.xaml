<Window x:Class="Prism.Views.AddMemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="新建备忘" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="标题：" FontWeight="Bold"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="0" Margin="0,25,0,0" Height="30"/>

        <TextBlock Text="内容：" FontWeight="Bold" Grid.Row="1"/>
        <TextBox x:Name="ContentTextBox" Grid.Row="1" Margin="0,25,0,0" 
                 Height="120" AcceptsReturn="True" TextWrapping="Wrap"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="取消" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="保存" Width="80" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
